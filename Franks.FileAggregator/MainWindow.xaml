<Window x:Class="Franks.FileAggregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Frank's Datei-Kopier-Tool" MinWidth="640" MinHeight="360" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize, CanResize">
    <Grid Margin="16">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />   <!-- Fehlerbereich füllt den Rest -->
            <RowDefinition Height="Auto" /> <!-- Button-Leiste unten -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Quelle" VerticalAlignment="Center" Margin="0,0,8,4" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,4" IsEnabled="{Binding IsIdle}" />
        <Button Grid.Row="0" Grid.Column="2" Content="Durchsuchen" Width="110" Command="{Binding BrowseSourceCommand}" Margin="0,0,0,4" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ziel" VerticalAlignment="Center" Margin="0,0,8,8" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,8" IsEnabled="{Binding IsIdle}" />
        <Button Grid.Row="1" Grid.Column="2" Content="Durchsuchen" Width="110" Command="{Binding BrowseTargetCommand}" Margin="0,0,0,8" />

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding FileCountText}" FontWeight="SemiBold" />

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,8,0,8">
            <ProgressBar Height="18" Minimum="0" Maximum="100" Value="{Binding ProgressValue, Mode=OneWay}" IsIndeterminate="{Binding IsCounting, Mode=OneWay}" Margin="0,0,0,4" />
            <TextBlock Text="{Binding StatusText}" />
        </StackPanel>

        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" /> <!-- Liste füllt den Fehlerbereich -->
            </Grid.RowDefinitions>

            <TextBlock Text="Fehler" FontWeight="SemiBold" />
            <Border Grid.Row="1" BorderBrush="#22000000" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ErrorMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" Margin="0,8,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="Kopieren" Width="110" Command="{Binding StartCopyCommand}" Margin="0,0,8,0" />
            <Button Content="Abbrechen" Width="110" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
